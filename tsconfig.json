{
"exclude": [
"node_modules",
"dist"
],
"include": [
"src/**/*"
],
"compilerOptions": {
"strict": true,
"module": "commonjs",
"charset": "utf-8",
"outDir": "./dist",
"target": "esnext",
"sourceMap": true,
"watch": true,
"moduleResolution": "node",
"noEmitOnError": true,
"allowJs": true,
"experimentalDecorators": true,
"emitDecoratorMetadata": true,
"lib": [
"dom",
"es2019",
"esnext.asynciterable"
]
}
}